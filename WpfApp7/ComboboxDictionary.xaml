<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <col:ArrayList x:Key="fonts">
        <system:String>Arial</system:String>
        <system:String>Verdana</system:String>
        <system:String>Times New Roman</system:String>
    </col:ArrayList>

    <col:ArrayList x:Key="size">
        <system:String>14</system:String>
        <system:String>16</system:String>
        <system:String>18</system:String>
    </col:ArrayList>


</ResourceDictionary>